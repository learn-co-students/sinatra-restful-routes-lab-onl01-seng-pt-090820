<h1>Edit <%=@recipe.name%></h1>
<form method="POST" action="/recipes/<%=@recipe.id%>">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<p>Name: <input type="text" id="name" name="recipe[name]" value="<%=@recipe.name%>"></p>
<p>Ingredients: <textarea type="text" id="ingredients" name="recipe[ingredients]"><%=@recipe.ingredients%>"</textarea>></p>
<p>Cook Time: <input type="text" id="cook_time" name="recipe[cook_time]" value="<%=@recipe.cook_time%>"></p>
<p><input type="submit" id="submit" value="Update Recipe"></p>
</form>
