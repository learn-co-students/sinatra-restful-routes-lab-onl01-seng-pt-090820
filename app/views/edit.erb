<h1>Edit Your Recipe</h1>
<form method="POST" action="/recipes/<%= @recipe.id %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= @recipe.name %>"><br>
    <label for="ingredients">Ingredients:</label>
    <input type="text" name="ingredients" id="ingredients" value="<%= @recipe.ingredients %>"><br>
    <label for="cook_time">Cook Time:</label>
    <input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %> minutes"><br>
    <input type="submit" id="submit" value="Edit this recipe">
</form>